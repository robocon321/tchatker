<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/imgBackground"
            android:src="@drawable/background"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/imgEditBackground"
            android:src="@drawable/edit"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:src="@drawable/user"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/black"
            app:civ_border_width="1px"
            app:civ_circle_background_color="@color/white"
            android:layout_marginTop="150dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/imgEditAvatar"
            android:src="@drawable/edit"
            android:layout_marginTop="160dp"
            android:layout_alignRight="@id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_below="@id/imgAvatar"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editName"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="*Name"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/editName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutBirthday"
                android:layout_below="@id/layoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layoutDate"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spDay"
                        android:layout_marginRight="10dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spMonth"
                        android:layout_marginRight="10dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spYear"
                        android:layout_marginRight="10dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:text="Birthday"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/layoutDate"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutPhone"
                android:layout_below="@id/layoutBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editPhone"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:typeface="monospace"
                    app:allowed_chars="1234567890"
                    app:mask="+84(###)### ###"
                    app:keep_hint="true"
                    />
                <TextView
                    android:text="Phone"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/editPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutEmail"
                android:layout_below="@id/layoutPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editEmail"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/editEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutPwd"
                android:layout_below="@id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editPwd"
                    android:inputType="textPassword"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="*Password"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/editPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutRePwd"
                android:layout_below="@id/layoutPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editRePwd"
                    android:inputType="textPassword"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="*Re-Password"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/editRePwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btnSave"
                android:text="Save"
                android:backgroundTint="#39A1F9"
                android:layout_below="@id/layoutRePwd"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>