<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tchatker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tchatker">
        <activity android:name=".activity.CommentActivity"></activity>
        <activity android:name=".activity.SendCallAudioActivity" />
        <activity android:name=".activity.SendCallVideoActivity" />
        <activity android:name=".activity.CallVideoActivity" />
        <activity android:name=".activity.ReceiveCallVideoActivity" />
        <activity android:name=".activity.ReceiveCallAudioActivity" />
        <activity android:name=".activity.ChatMessageActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.OTPActivity" />
        <activity android:name=".activity.ForgotPasswordActivity" />
        <activity android:name=".activity.CreateAccountActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.CallService" />
    </application>

</manifest>